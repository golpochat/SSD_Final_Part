<div class="flex-row">
  <p id="notice"><%= notice %></p>

  <h3 class="mb-5 mt-5">Users</h3>

  <table class="table">
    <thead>
    <tr>
      <th><%= link_to 'Add User', new_user_path,class: "btn btn-success btn-md"%></th>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td></td>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Show', user ,class: "btn btn-primary btn-md"%>
          <%= link_to 'Edit', edit_user_path(user),class: "btn btn-warning btn-md" %>
          <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger btn-md"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>