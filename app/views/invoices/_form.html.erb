<div class="flex-row">
  <%= form_with(model: @invoice, local: true) do |form| %>
    <% if @invoice.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice_item from being saved:</h4>

        <ul>
          <% @invoice.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p> <%= form.label :date_of_invoice %></p>
    <%= form.date_select :date_of_invoice, class: "form-control" %>
    <p class="mt-3">
      <%= form.label :status %>
      <%= form.text_field :status, class: "form-control" %>
    </p>
    <p class="pt-3">
      <%= form.submit "Submit", class: "btn btn-primary btn-md" %>
    </p>
  <% end %>
</div>
